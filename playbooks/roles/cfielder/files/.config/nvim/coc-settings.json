{
  "python.autoComplete.addBrackets": true,
  "python.formatting.provider": "black",
  "python.jediEnabled": false,
  "yaml.format.enable": true,
  "yaml.validate": true,
  "yaml.hover": true,
  "yaml.completion": true,
  "yaml.schemas": {
    "http://json.schemastore.org/ansible-stable-2.6": "/*.y*ml"
  },
  "diagnostic.errorSign": ">>",
  "diagnostic.warningSign": ">",
  "diagnostic.infoSign": ">>",
  "coc.preferences.hoverTarget": "echo",
  "list.normalMappings": {
    "t": "action:tabe",
    "v": "action:vsplit",
    "s": "action:split",
    "d": "expr:GetDeleteAction"
  },
  "list.insertMappings": {
    "<C-t>": "action:tabe",
    "<C-w>": "command:wincmd k"
  },
  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": [
        "terraform"
      ]
    }
  }
}
