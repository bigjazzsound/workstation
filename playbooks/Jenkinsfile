pipeline {
    agent {
        node {
            label 'desktop'
        }
    }
    triggers {
        pollSCM 'H/5 * * * *'
    }
    stages {
        stage('build') {
            steps {
                ansiblePlaybook(
                    playbook: 'playbooks/main.yml',
                    inventory: 'playbooks/hosts.yml',
                    limit: 'local'
                )
            }
        }
    }
}
